@model ARSAN_Web.Models.JuntaDirectiva

@{
    ViewData["Title"] = "Crear Junta Directiva";
}

<h1>Crear Junta Directiva</h1>

<h4>Nueva Junta Directiva</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IdCluster" class="control-label">Cluster</label>
                <select asp-for="IdCluster" class="form-control" asp-items="ViewBag.IdCluster">
                    <option value="">-- Seleccione un cluster --</option>
                </select>
                <span asp-validation-for="IdCluster" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnioInicio" class="control-label">Año de Inicio</label>
                <input asp-for="AnioInicio" class="form-control" type="number" min="2000" max="2100" />
                <span asp-validation-for="AnioInicio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnioFin" class="control-label">Año de Fin (Opcional)</label>
                <input asp-for="AnioFin" class="form-control" type="number" min="2000" max="2100" />
                <span asp-validation-for="AnioFin" class="text-danger"></span>
                <small class="form-text text-muted">Deje vacío si la junta está actualmente en funciones</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}