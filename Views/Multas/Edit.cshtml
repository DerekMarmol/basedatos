@model ARSAN_Web.Models.Multa

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Multa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMulta" />
            <div class="form-group">
                <label asp-for="IdCasa" class="control-label"></label>
                <input asp-for="IdCasa" class="form-control" />
                <span asp-validation-for="IdCasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdResidencia" class="control-label"></label>
                <select asp-for="IdResidencia" class="form-control" asp-items="ViewBag.IdResidencia"></select>
                <span asp-validation-for="IdResidencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pagada" /> @Html.DisplayNameFor(model => model.Pagada)
