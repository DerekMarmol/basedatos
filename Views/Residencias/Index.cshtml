@model IEnumerable<ARSAN_Web.Models.Residencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cluster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Propietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cluster.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propietario.Dpi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inquilino.Dpi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdResidencia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdResidencia">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdResidencia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
