@model ARSAN_Web.Models.Residencia

@{
    ViewData["Title"] = "Eliminar Residencia";
}

<h1>Eliminar Residencia</h1>
<hr />

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">⚠️ ¿Está seguro que desea eliminar esta residencia?</h4>
    <p class="mb-0">Esta acción no se puede deshacer. Todos los datos asociados serán eliminados permanentemente.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Información de la Residencia a Eliminar</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">
                <strong>@Html.DisplayFor(model => model.Numero)</strong>
            </dd>

            <dt class="col-sm-3">Cluster</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cluster.Nombre)
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>

            <dt class="col-sm-3">Propietario</dt>
            <dd class="col-sm-9">
                @if (Model.Propietario != null)
                {
                    <div>
                        @Html.DisplayFor(model => model.Propietario.NombreCompleto)<br />
                        <small class="text-muted">DPI: @Model.Propietario.Dpi</small>
                    </div>
                }
                else
                {
                    <span class="text-muted">Sin propietario</span>
                }
            </dd>

            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">
                @if (Model.Inquilino != null)
                {
                    <div>
                        @Html.DisplayFor(model => model.Inquilino.NombreCompleto)<br />
                        <small class="text-muted">DPI: @Model.Inquilino.Dpi</small>
                    </div>
                }
                else
                {
                    <span class="text-muted">Sin inquilino</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="IdResidencia" />
    <button type="submit" class="btn btn-danger">Sí, Eliminar Residencia</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>