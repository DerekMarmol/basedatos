@model ARSAN_Web.Models.Residencia

@{
    ViewData["Title"] = "Editar Residencia";
}

<div class="mb-4">
    <h1>Editar Residencia #@Model.Numero</h1>
    <p class="text-muted">Modifique los datos de la residencia</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-warning">
        <h5 class="mb-0">Información de la Residencia</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="IdResidencia" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Numero" class="form-label">Número de Residencia</label>
                        <input asp-for="Numero" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="IdCluster" class="form-label">Cluster</label>
                        <select asp-for="IdCluster" class="form-select" asp-items="ViewBag.IdCluster">
                            <option value="">-- Seleccione un cluster --</option>
                        </select>
                        <span asp-validation-for="IdCluster" class="text-danger"></span>
                        <small class="form-text text-muted">Seleccione el cluster al que pertenece</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Estado" class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="">-- Seleccione un estado --</option>
                            <option value="ocupada">Ocupada</option>
                            <option value="alquilada">Alquilada</option>
                            <option value="desocupada">Desocupada</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="IdPropietario" class="form-label">Propietario</label>
                        <select asp-for="IdPropietario" class="form-select" asp-items="ViewBag.IdPropietario">
                            <option value="">-- Seleccione un propietario --</option>
                        </select>
                        <span asp-validation-for="IdPropietario" class="text-danger"></span>
                        <small class="form-text text-muted">Propietario de la residencia</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="IdInquilino" class="form-label">Inquilino (Opcional)</label>
                        <select asp-for="IdInquilino" class="form-select" asp-items="ViewBag.IdInquilino">
                            <option value="">-- Sin inquilino --</option>
                        </select>
                        <span asp-validation-for="IdInquilino" class="text-danger"></span>
                        <small class="form-text text-muted">Deje vacío si la residencia no tiene inquilino</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-warning">
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}