@model ARSAN_Web.Models.Residencia

@{
    ViewData["Title"] = "Detalles de Residencia";
}

<h1>Detalles de Residencia</h1>
<hr />

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información de la Residencia #@Model.Numero</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">
                <strong>@Html.DisplayFor(model => model.Numero)</strong>
            </dd>

            <dt class="col-sm-3">Cluster</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cluster.Nombre)
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @switch (Model.Estado?.ToLower())
                {
                    case "ocupada":
                        <span class="badge bg-success">Ocupada</span>
                        break;
                    case "alquilada":
                        <span class="badge bg-info">Alquilada</span>
                        break;
                    case "desocupada":
                        <span class="badge bg-warning text-dark">Desocupada</span>
                        break;
                    default:
                        <span class="badge bg-secondary">@Model.Estado</span>
                        break;
                }
            </dd>

            <dt class="col-sm-3">Propietario</dt>
            <dd class="col-sm-9">
                @if (Model.Propietario != null)
                {
                    <div>
                        <strong>@Html.DisplayFor(model => model.Propietario.NombreCompleto)</strong><br />
                        <small class="text-muted">DPI: @Model.Propietario.Dpi</small>
                        @if (!string.IsNullOrEmpty(Model.Propietario.Telefono))
                        {
                            <br />
                            <small class="text-muted">Tel: @Model.Propietario.Telefono</small>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">Sin propietario asignado</span>
                }
            </dd>

            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">
                @if (Model.Inquilino != null)
                {
                    <div>
                        <strong>@Html.DisplayFor(model => model.Inquilino.NombreCompleto)</strong><br />
                        <small class="text-muted">DPI: @Model.Inquilino.Dpi</small>
                        @if (!string.IsNullOrEmpty(Model.Inquilino.Telefono))
                        {
                            <br />
                            <small class="text-muted">Tel: @Model.Inquilino.Telefono</small>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">Sin inquilino</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdResidencia" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>