@model ARSAN_Web.Models.Cluster

@{
    ViewData["Title"] = "Crear Cluster";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">📍 Crear Nuevo Cluster</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="IdResidencial" class="form-label fw-semibold">
                                Residencial
                            </label>
                            <select asp-for="IdResidencial" class="form-control form-control-lg" asp-items="ViewBag.IdResidencial">
                                <option value="">-- Seleccione un residencial --</option>
                            </select>
                            <span asp-validation-for="IdResidencial" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-semibold">
                                Nombre del Cluster
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg"
                                   placeholder="Ej: Diana I, Diana II, etc." />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                ✅ Crear Cluster
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ← Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}