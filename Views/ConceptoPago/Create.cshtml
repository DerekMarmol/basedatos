@model ARSAN_Web.Models.ConceptoPago

@{
    ViewData["Title"] = "Crear Concepto de Pago";
}

<div class="mb-4">
    <h1>Crear Concepto de Pago</h1>
    <p class="text-muted">Defina un nuevo concepto para la cuota de mantenimiento</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información del Concepto</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Codigo" class="form-label">Código</label>
                        <input asp-for="Codigo" class="form-control" placeholder="Ej. AGUA, SEGURIDAD" style="text-transform: uppercase;" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                        <small class="form-text text-muted">Identificador único del concepto</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Concepto</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej. Servicio de Agua" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Monto" class="form-label">Monto (Q)</label>
                        <input asp-for="Monto" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                        <small class="form-text text-muted">Monto mensual a cobrar</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción (Opcional)</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4"
                                  placeholder="Descripción detallada del concepto"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="Activo" checked />
                        <label class="form-check-label" asp-for="Activo">
                            Concepto Activo
                        </label>
                        <small class="d-block text-muted">Si está activo, se incluirá en el cálculo de la cuota mensual</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Crear Concepto</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <div class="alert alert-info">
        <strong>💡 Ejemplos de Conceptos:</strong>
        <ul class="mb-0">
            <li><strong>AGUA</strong> - Servicio de Agua (Q210.00)</li>
            <li><strong>JARDIN</strong> - Jardinería y ornato (Q80.00)</li>
            <li><strong>SEGURIDAD</strong> - Servicio de seguridad (Q115.00)</li>
            <li><strong>ADMIN</strong> - Administración (Q75.00)</li>
        </ul>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Convertir código a mayúsculas automáticamente
        document.querySelector('input[name="Codigo"]').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
}