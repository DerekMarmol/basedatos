@model ARSAN_Web.Models.ConceptoPago

@{
    ViewData["Title"] = "Eliminar Concepto";
    var tieneDetalles = ViewBag.TieneDetalles as bool? ?? false;
}

<div class="mb-4">
    <h1>Eliminar Concepto de Pago</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">⚠️ ¿Está seguro que desea eliminar este concepto?</h4>
    <p class="mb-0">
        Esta acción no se puede deshacer. El concepto será eliminado permanentemente del sistema.
    </p>
    @if (tieneDetalles)
    {
        <hr />
        <p class="mb-0">
            <strong>⚠️ Advertencia:</strong> Este concepto tiene recibos asociados.
            Se recomienda marcarlo como <strong>Inactivo</strong> en lugar de eliminarlo para mantener el historial.
        </p>
    }
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Información del Concepto a Eliminar</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-9">
                <strong>@Model.Codigo</strong>
            </dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">
                @Model.Nombre
            </dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">
                Q @Model.Monto.ToString("N2")
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-success">✓ Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">✗ Inactivo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="IdConceptoPago" />
    @if (tieneDetalles)
    {
        <div class="alert alert-warning">
            <strong>Recomendación:</strong> En lugar de eliminar, considere
            <a asp-action="Edit" asp-route-id="@Model.IdConceptoPago" class="alert-link">marcar como Inactivo</a>.
        </div>
    }
    <button type="submit" class="btn btn-danger">Sí, Eliminar Concepto</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>