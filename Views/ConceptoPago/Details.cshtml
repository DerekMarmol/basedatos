@model ARSAN_Web.Models.ConceptoPago

@{
    ViewData["Title"] = "Detalles del Concepto";
}

<div class="mb-4">
    <h1>Detalles del Concepto de Pago</h1>
</div>

@if (!Model.Activo)
{
    <div class="alert alert-warning" role="alert">
        <strong>⚠️ Advertencia:</strong> Este concepto está marcado como <strong>INACTIVO</strong> y no se incluirá en nuevos recibos.
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información del Concepto</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-9">
                <strong class="fs-5">@Model.Codigo</strong>
            </dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">
                @Model.Nombre
            </dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                    @Model.Descripcion
                }
                else
                {
                    <span class="text-muted">Sin descripción</span>
                }
            </dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">
                <strong class="text-success fs-4">Q @Model.Monto.ToString("N2")</strong>
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-success fs-6">✓ ACTIVO</span>
                    <small class="d-block text-muted">Se incluye en el cálculo de la cuota mensual</small>
                }
                else
                {
                    <span class="badge bg-secondary fs-6">✗ INACTIVO</span>
                    <small class="d-block text-muted">No se incluye en nuevos recibos</small>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdConceptoPago" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>