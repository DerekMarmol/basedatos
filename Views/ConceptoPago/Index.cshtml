@model IEnumerable<ARSAN_Web.Models.ConceptoPago>

@{
    ViewData["Title"] = "Conceptos de Pago";
    var totalCuota = ViewBag.TotalCuotaMensual as decimal? ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>💰 Conceptos de Pago</h1>
        <p class="text-muted">Definición de conceptos para cuota de mantenimiento mensual</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        Crear Nuevo Concepto
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">💵 Cuota Mensual Total (Conceptos Activos)</h5>
                <h2 class="mb-0">Q @totalCuota.ToString("N2")</h2>
                <small>Total que debe pagar cada casa mensualmente</small>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info">
    <strong>ℹ️ Información:</strong>
    <ul class="mb-0 mt-2">
        <li>Los conceptos <strong>activos</strong> se incluyen en el cálculo de la cuota mensual</li>
        <li>Los conceptos <strong>inactivos</strong> no se cobran pero permanecen en el sistema para historial</li>
        <li>Los conceptos se utilizan para generar el desglose en los recibos de pago</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre del Concepto</th>
                        <th>Descripción</th>
                        <th>Monto</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(!item.Activo ? "table-secondary" : "")">
                            <td>
                                <strong>@item.Codigo</strong>
                            </td>
                            <td>
                                @item.Nombre
                                @if (!item.Activo)
                                {
                                    <br />
                                    <small class="text-muted">Inactivo</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Descripcion))
                                {
                                    <small>@item.Descripcion</small>
                                }
                                else
                                {
                                    <small class="text-muted">Sin descripción</small>
                                }
                            </td>
                            <td>
                                <strong class="text-success">Q @item.Monto.ToString("N2")</strong>
                            </td>
                            <td>
                                @if (item.Activo)
                                {
                                    <span class="badge bg-success">✓ Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">✗ Inactivo</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdConceptoPago"
                                   class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdConceptoPago"
                                   class="btn btn-sm btn-info">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdConceptoPago"
                                   class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="3" class="text-end"><strong>Total Cuota Mensual:</strong></td>
                        <td colspan="3"><strong class="text-success fs-5">Q @totalCuota.ToString("N2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-cash-stack" style="font-size: 3rem; color: #6c757d;"></i>
                <p class="text-muted mt-3">No hay conceptos de pago registrados.</p>
                <a asp-action="Create" class="btn btn-primary">Crear el primer concepto</a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <div class="alert alert-warning">
        <strong>📋 Conceptos Sugeridos:</strong>
        <ul class="mb-0">
            <li><strong>AGUA</strong> - Servicio de Agua → Q210.00</li>
            <li><strong>JARDIN</strong> - Servicio de Jardinería y ornato → Q80.00</li>
            <li><strong>SEGURIDAD</strong> - Servicio de seguridad → Q115.00</li>
            <li><strong>ADMIN</strong> - Administración → Q75.00</li>
        </ul>
        <small class="text-muted">Total sugerido: Q480.00 mensuales por casa</small>
    </div>
</div>