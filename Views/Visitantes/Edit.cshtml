@model ARSAN_Web.Models.Visitante

@{
    ViewData["Title"] = "Editar Visitante";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Visitantes</a></li>
                        <li class="breadcrumb-item active">Editar</li>
                    </ol>
                </nav>
                <h2>
                    <i class="bi bi-pencil-square text-warning me-2"></i>Editar Visitante
                </h2>
                <p class="text-muted">Modifique los datos del visitante</p>
            </div>

            <!-- Formulario -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="IdVisitante" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Información Personal -->
                        <h5 class="mb-3">
                            <i class="bi bi-person-circle text-primary me-2"></i>Información Personal
                        </h5>

                        <div class="mb-4">
                            <label asp-for="NombreCompleto" class="form-label fw-bold">
                                <i class="bi bi-person me-1"></i>Nombre Completo *
                            </label>
                            <input asp-for="NombreCompleto" class="form-control form-control-lg" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Dpi" class="form-label fw-bold">
                                    <i class="bi bi-card-text me-1"></i>DPI
                                </label>
                                <input asp-for="Dpi" class="form-control form-control-lg" maxlength="20" />
                                <span asp-validation-for="Dpi" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Telefono" class="form-label fw-bold">
                                    <i class="bi bi-telephone me-1"></i>Teléfono
                                </label>
                                <input asp-for="Telefono" type="tel" class="form-control form-control-lg" maxlength="20" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Información Adicional -->
                        <h5 class="mb-3">
                            <i class="bi bi-info-square text-primary me-2"></i>Información Adicional
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Placa" class="form-label fw-bold">
                                    <i class="bi bi-car-front me-1"></i>Placa del Vehículo
                                </label>
                                <input asp-for="Placa" class="form-control form-control-lg"
                                       maxlength="20" style="text-transform: uppercase;" />
                                <span asp-validation-for="Placa" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Empresa" class="form-label fw-bold">
                                    <i class="bi bi-building me-1"></i>Empresa
                                </label>
                                <input asp-for="Empresa" class="form-control form-control-lg" maxlength="100" />
                                <span asp-validation-for="Empresa" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 text-white">
                                <i class="bi bi-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Advertencia -->
            <div class="alert alert-warning mt-3" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Atención
                </h6>
                <p class="mb-0 small">
                    Los cambios afectarán los registros históricos de visitas asociados a este visitante.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Convertir placa a mayúsculas automáticamente
            $('#Placa').on('input', function() {
                this.value = this.value.toUpperCase();
            });
        });
    </script>

    <style>
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
}
