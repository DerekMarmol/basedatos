@model ARSAN_Web.Models.Visitante

@{
    ViewData["Title"] = "Eliminar Visitante";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Visitantes</a></li>
                        <li class="breadcrumb-item active">Eliminar</li>
                    </ol>
                </nav>
                <h2 class="text-danger">
                    <i class="bi bi-trash me-2"></i>Eliminar Visitante
                </h2>
                <p class="text-muted">Confirme la eliminación de este visitante</p>
            </div>

            <!-- Alerta de advertencia -->
            <div class="alert alert-danger border-danger shadow-sm" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>¡Atención!
                </h5>
                <p class="mb-0">
                    Está a punto de eliminar este visitante de forma permanente.
                    Esta acción <strong>NO</strong> se puede deshacer.
                </p>
            </div>

            <!-- Información del visitante a eliminar -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Información del Visitante
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">ID de Visitante</label>
                        <p class="fs-5 mb-0 fw-bold text-danger">#@Model.IdVisitante</p>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">Nombre Completo</label>
                        <div class="alert alert-light border mb-0">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-fill fs-3 text-danger me-3"></i>
                                <div>
                                    <p class="mb-0 fw-bold fs-5">@Model.NombreCompleto</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">DPI</label>
                            <p class="fs-5 mb-0">
                                @if (!string.IsNullOrEmpty(Model.Dpi))
                                {
                                    <span>
                                        <i class="bi bi-card-text text-danger me-2"></i>
                                        @Model.Dpi
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No registrado</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Teléfono</label>
                            <p class="fs-5 mb-0">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <span>
                                        <i class="bi bi-telephone-fill text-danger me-2"></i>
                                        @Model.Telefono
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No registrado</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Placa</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Placa))
                                {
                                    <span class="badge bg-danger fs-6">
                                        <i class="bi bi-car-front-fill me-1"></i>@Model.Placa
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin vehículo</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Empresa</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Empresa))
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-building me-1"></i>@Model.Empresa
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Personal</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Advertencias adicionales -->
            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Consecuencias
                </h6>
                <ul class="mb-0 small">
                    <li>Se eliminarán todos los registros relacionados con este visitante</li>
                    <li>Los registros de visitas históricos perderán la referencia al visitante</li>
                    <li>Esta acción es permanente y no se puede revertir</li>
                </ul>
            </div>

            <!-- Formulario de confirmación -->
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdVisitante" />

                        <div class="mb-4">
                            <h5 class="text-danger">¿Está seguro que desea eliminar este visitante?</h5>
                            <p class="text-muted mb-0">
                                Esta acción eliminará permanentemente a
                                <strong>@Model.NombreCompleto</strong> del sistema.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>No, Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash me-2"></i>Sí, Eliminar Visitante
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Link alternativo -->
            <div class="text-center mt-4">
                <a asp-action="Details" asp-route-id="@Model.IdVisitante" class="btn btn-link text-decoration-none">
                    <i class="bi bi-eye me-1"></i>Ver detalles completos del visitante
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-weight: 500;
        padding: 0.5rem 0.8rem;
    }

    .alert {
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .alert-warning {
        border-left-color: #ffc107;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }

    hr {
        opacity: 0.1;
    }
</style>
