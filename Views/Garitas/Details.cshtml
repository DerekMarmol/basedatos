@model ARSAN_Web.Models.Garita

@{
    ViewData["Title"] = "Detalles de Garita";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">🏠 Detalles de Garita</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ubicacion)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Activa)
                </dt>
                <dd class="col-sm-9">
                    @(Model.Activa ? "✅ Activa" : "❌ Inactiva")
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Cluster)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cluster.Nombre)
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light text-end rounded-bottom-4">
            <a asp-action="Edit" asp-route-id="@Model?.IdGarita" class="btn btn-warning me-2">
                ✏️ Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                🔙 Volver a la Lista
            </a>
        </div>
    </div>
</div>
