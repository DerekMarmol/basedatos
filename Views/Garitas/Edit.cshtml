@model ARSAN_Web.Models.Garita

@{
    ViewData["Title"] = "Editar Garita";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>✏️ Editar Garita</h1>
        <p class="text-muted">Modifica los datos de la garita seleccionada y guarda los cambios</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        ← Volver al listado
    </a>
</div>

<div class="alert alert-info">
    <strong>🛠️ Consejo:</strong> Puedes actualizar el nombre, ubicación, estado y cluster de la garita. Asegúrate de que los datos reflejen la situación actual.
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdGarita" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">🏷️ Nombre de la Garita</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej. Garita Principal" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdCluster" class="form-label">📍 Cluster Asociado</label>
                <select asp-for="IdCluster" class="form-select" asp-items="ViewBag.IdCluster">
                    <option value="">-- Selecciona un Cluster --</option>
                </select>
                <span asp-validation-for="IdCluster" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ubicacion" class="form-label">🗺️ Ubicación</label>
                <input asp-for="Ubicacion" class="form-control" placeholder="Ej. Entrada por Calle 5" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="Activa" />
                <label class="form-check-label" asp-for="Activa">✅ ¿Está activa?</label>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">
                    💾 Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
