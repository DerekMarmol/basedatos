@model IEnumerable<ARSAN_Web.Models.Garita>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cluster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cluster.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGarita">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdGarita">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGarita">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
