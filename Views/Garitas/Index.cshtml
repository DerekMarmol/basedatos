@model IEnumerable<ARSAN_Web.Models.Garita>

@{
    ViewData["Title"] = "Garitas de Seguridad";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>🏛️ Garitas de Seguridad</h1>
        <p class="text-muted">Puntos de control y vigilancia del residencial</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        Registrar Nueva Garita
    </a>
</div>

<div class="alert alert-info">
    <strong>ℹ️ Información:</strong>
    <ul class="mb-0 mt-2">
        <li><strong>Garita Principal:</strong> Punto de acceso principal al residencial</li>
        <li><strong>Garitas de Cluster:</strong> Puntos de control para cada sector/cluster</li>
        <li>Cada garita debe tener guardias asignados en turnos de máximo 24 horas</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre de Garita</th>
                        <th>Residencial</th>
                        <th>Cluster</th>
                        <th>Ubicación</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(!item.Activa ? "table-secondary" : "")">
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                @if (!item.Activa)
                                {
                                    <br />
                                    <small class="text-muted">Inactiva</small>
                                }
                            </td>
                            <td>
                                @if (item.Cluster?.Residencial != null)
                                {
                                    @Html.DisplayFor(modelItem => item.Cluster.Residencial.Nombre)
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">
                                    @Html.DisplayFor(modelItem => item.Cluster.Nombre)
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Ubicacion))
                                {
                                    <small>📍 @Html.DisplayFor(modelItem => item.Ubicacion)</small>
                                }
                                else
                                {
                                    <small class="text-muted">No especificada</small>
                                }
                            </td>
                            <td>
                                @if (item.Activa)
                                {
                                    <span class="badge bg-success">✓ Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">✗ Inactiva</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdGarita" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdGarita" class="btn btn-sm btn-info">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdGarita" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-building-x" style="font-size: 3rem; color: #6c757d;"></i>
                <p class="text-muted mt-3">No hay garitas registradas.</p>
                <a asp-action="Create" class="btn btn-primary">Registrar la primera garita</a>
            </div>
        }
    </div>
</div>