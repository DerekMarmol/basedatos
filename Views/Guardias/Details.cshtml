@model ARSAN_Web.Models.Guardia

@{
    ViewData["Title"] = "Detalles del Guardia";
}

<div class="mb-4">
    <h1>Detalles del Guardia</h1>
</div>

@if (!Model.Activo)
{
    <div class="alert alert-warning" role="alert">
        <strong>⚠️ Advertencia:</strong> Este guardia está marcado como <strong>INACTIVO</strong> y no puede ser asignado a turnos.
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información Personal</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9">
                <strong>@Html.DisplayFor(model => model.NombreCompleto)</strong>
            </dd>

            <dt class="col-sm-3">DPI</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Dpi)
            </dd>

            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">
                @switch (Model.Genero?.ToUpper())
                {
                    case "M":
                        <span>👨 Masculino</span>
                        break;
                    case "F":
                        <span>👩 Femenino</span>
                        break;
                    default:
                        <span>@Model.Genero</span>
                        break;
                }
            </dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Telefono))
                {
                    <span>📞 @Html.DisplayFor(model => model.Telefono)</span>
                }
                else
                {
                    <span class="text-muted">No registrado</span>
                }
            </dd>

            <dt class="col-sm-3">Residencial Asignado</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Residencial.Nombre)
            </dd>

            <dt class="col-sm-3">Fecha de Contratación</dt>
            <dd class="col-sm-9">
                @if (Model.FechaContratacion.HasValue)
                {
                    <span>@Model.FechaContratacion.Value.ToString("dd/MM/yyyy")</span>
                    <small class="text-muted">
                        (@((DateTime.Now - Model.FechaContratacion.Value).Days / 30) meses trabajando)
                    </small>
                }
                else
                {
                    <span class="text-muted">No registrada</span>
                }
            </dd>

            <dt class="col-sm-3">Turno Preferente</dt>
            <dd class="col-sm-9">
                @switch (Model.Turno?.ToUpper())
                {
                    case "M":
                        <span class="badge bg-warning text-dark">☀️ Matutino (06:00 - 14:00)</span>
                        break;
                    case "V":
                        <span class="badge bg-primary">🌆 Vespertino (14:00 - 22:00)</span>
                        break;
                    case "N":
                        <span class="badge bg-dark">🌙 Nocturno (22:00 - 06:00)</span>
                        break;
                    default:
                        <span class="badge bg-secondary">@Model.Turno</span>
                        break;
                }
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-success fs-6">✓ ACTIVO</span>
                    <small class="d-block text-muted">Disponible para asignación de turnos</small>
                }
                else
                {
                    <span class="badge bg-secondary fs-6">✗ INACTIVO</span>
                    <small class="d-block text-muted">No disponible para asignación</small>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdGuardia" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>