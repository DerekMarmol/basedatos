@model ARSAN_Web.Models.Guardia

@{
    ViewData["Title"] = "Registrar Guardia";
}

<div class="mb-4">
    <h1>Registrar Nuevo Guardia de Seguridad</h1>
    <p class="text-muted">Complete los datos del guardia de seguridad</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información del Guardia</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Ej. Juan Pérez García" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Dpi" class="form-label">DPI</label>
                        <input asp-for="Dpi" class="form-control" maxlength="13" placeholder="Ej. 1234567890101" />
                        <span asp-validation-for="Dpi" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ej. 1234-5678" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Genero" class="form-label">Género</label>
                        <select asp-for="Genero" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="IdResidencial" class="form-label">Residencial Asignado</label>
                        <select asp-for="IdResidencial" class="form-select" asp-items="ViewBag.IdResidencial">
                            <option value="">-- Seleccione un residencial --</option>
                        </select>
                        <span asp-validation-for="IdResidencial" class="text-danger"></span>
                        <small class="form-text text-muted">Residencial donde prestará servicio</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FechaContratacion" class="form-label">Fecha de Contratación</label>
                        <input asp-for="FechaContratacion" type="date" class="form-control" />
                        <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Turno" class="form-label">Turno Preferente</label>
                        <select asp-for="Turno" class="form-select">
                            <option value="">-- Seleccione un turno --</option>
                            <option value="M">☀️ Matutino (06:00 - 14:00)</option>
                            <option value="V">🌆 Vespertino (14:00 - 22:00)</option>
                            <option value="N">🌙 Nocturno (22:00 - 06:00)</option>
                        </select>
                        <span asp-validation-for="Turno" class="text-danger"></span>
                        <small class="form-text text-muted">Turno preferido del guardia (máximo 24h seguidas)</small>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="Activo" checked />
                        <label class="form-check-label" asp-for="Activo">
                            Guardia Activo
                        </label>
                        <small class="d-block text-muted">Marque si el guardia está disponible para trabajar</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Registrar Guardia</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}