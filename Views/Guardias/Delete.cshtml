@model ARSAN_Web.Models.Guardia

@{
    ViewData["Title"] = "Eliminar Guardia";
}

<div class="mb-4">
    <h1>Eliminar Guardia de Seguridad</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">⚠️ ¿Está seguro que desea eliminar este guardia?</h4>
    <p class="mb-0">
        Esta acción no se puede deshacer. Si el guardia tiene turnos asignados, también se eliminarán esos registros.
    </p>
    <hr />
    <p class="mb-0">
        <strong>Recomendación:</strong> En lugar de eliminar, considere marcar al guardia como "Inactivo" desde la opción Editar.
    </p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Información del Guardia a Eliminar</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9">
                <strong>@Html.DisplayFor(model => model.NombreCompleto)</strong>
            </dd>

            <dt class="col-sm-3">DPI</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Dpi)
            </dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Telefono)
            </dd>

            <dt class="col-sm-3">Residencial</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Residencial.Nombre)
            </dd>

            <dt class="col-sm-3">Fecha de Contratación</dt>
            <dd class="col-sm-9">
                @if (Model.FechaContratacion.HasValue)
                {
                    @Model.FechaContratacion.Value.ToString("dd/MM/yyyy")
                }
            </dd>

            <dt class="col-sm-3">Turno</dt>
            <dd class="col-sm-9">
                @switch (Model.Turno?.ToUpper())
                {
                    case "M":
                        <span>☀️ Matutino</span>
                        break;
                    case "V":
                        <span>🌆 Vespertino</span>
                        break;
                    case "N":
                        <span>🌙 Nocturno</span>
                        break;
                    default:
                        <span>@Model.Turno</span>
                        break;
                }
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-success">✓ Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">✗ Inactivo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="IdGuardia" />
    <button type="submit" class="btn btn-danger">Sí, Eliminar Guardia</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>