@model ARSAN_Web.ViewModels.EstadoCuentaViewModel

@{
    ViewData["Title"] = "Estado de Cuenta - " + Model.Residencia.Cluster.Nombre + " Casa #" + Model.Residencia.Numero;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Búsqueda</a></li>
                <li class="breadcrumb-item active">Estado de Cuenta</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-file-earmark-text text-primary me-2"></i>
                    Estado de Cuenta
                </h2>
                <p class="text-muted mb-0">
                    @Model.Residencia.Cluster.Nombre - Casa #@Model.Residencia.Numero
                </p>
            </div>

            <!-- Selector de año -->
            <div>
                <form method="get" asp-action="Ver" asp-route-id="@Model.Residencia.IdResidencia" class="d-inline">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                        <select name="anio" class="form-select" onchange="this.form.submit()">
                            @for (int año = DateTime.Now.Year; año >= DateTime.Now.Year - 5; año--)
                            {
                                <option value="@año" selected="@(año == Model.AnioConsulta)">@año</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Información del Propietario -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-3">
                        <i class="bi bi-person-circle text-primary me-2"></i>
                        Información del Propietario
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Nombre:</strong> @Model.Residencia.Propietario.NombreCompleto</p>
                            <p class="mb-2"><strong>Residencia:</strong> @Model.Residencia.Cluster.Nombre - Casa #@Model.Residencia.Numero</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong>Estado de la Cuenta:</strong>
                                @if (Model.Estado == "Al día")
                                {
                                    <span class="badge bg-success fs-6">@Model.Estado</span>
                                }
                                else if (Model.Estado == "Moroso")
                                {
                                    <span class="badge bg-danger fs-6">@Model.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning fs-6">@Model.Estado</span>
                                }
                            </p>
                            <p class="mb-2"><strong>Año de consulta:</strong> @Model.AnioConsulta</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    @if (Model.EstaMoroso)
                    {
                        <div class="alert alert-danger mb-0">
                            <i class="bi bi-exclamation-triangle-fill fs-1 d-block mb-2"></i>
                            <strong>¡MOROSO!</strong><br>
                            <small>@Model.DiaSinPagar días sin pagar</small>
                        </div>
                    }
                    else if (Model.SaldoTotalPendiente > 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-clock-history fs-1 d-block mb-2"></i>
                            <strong>Pendiente de Pago</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle-fill fs-1 d-block mb-2"></i>
                            <strong>¡Al Día!</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas principales -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-danger bg-opacity-10 p-3 rounded">
                                <i class="bi bi-exclamation-circle fs-2 text-danger"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Vencido</h6>
                            <h3 class="mb-0 text-danger">Q @string.Format("{0:N2}", Model.SaldoTotalPendiente)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-cash-stack fs-2 text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Meses que Debe</h6>
                            <h3 class="mb-0 text-warning">@Model.MesesDebe</h3>
                            <small class="text-muted">de @Model.MesesDeberíaPagar meses</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-check-circle fs-2 text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Pagado</h6>
                            <h3 class="mb-0 text-success">Q @string.Format("{0:N2}", Model.TotalPagosMantenimiento)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-calendar-check fs-2 text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Cuota Mensual</h6>
                            <h3 class="mb-0 text-primary">Q @string.Format("{0:N2}", Model.CuotaMensual)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalle de Pagos Pendientes -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-x me-2"></i>
                        Pagos Pendientes (@Model.AnioConsulta)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.MesesDebe > 0 || Model.MultasPendientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Descripción</th>
                                        <th>Fecha Sugerida</th>
                                        <th class="text-end">Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Mostrar meses pendientes de mantenimiento *@
                                    @if (Model.MesesDebe > 0)
                                    {
                                        for (int i = 0; i < Model.MesesDebe; i++)
                                        {
                                            var mesPendiente = Model.MesesPagados + i + 1;
                                            if (mesPendiente <= Model.MesesDeberíaPagar)
                                            {
                                                var fechaSugerida = new DateTime(Model.AnioConsulta, mesPendiente, 10);
                                                <tr>
                                                    <td><span class="badge bg-warning">Mantenimiento</span></td>
                                                    <td>Cuota mes @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mesPendiente)</td>
                                                    <td>@fechaSugerida.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end"><strong>Q @string.Format("{0:N2}", Model.CuotaMensual)</strong></td>
                                                </tr>
                                            }
                                        }
                                    }

                                    @* Mostrar multas pendientes *@
                                    @foreach (var multa in Model.MultasPendientes)
                                    {
                                        <tr>
                                            <td><span class="badge bg-danger">Multa</span></td>
                                            <td>@multa.Concepto</td>
                                            <td>@multa.Fecha.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end"><strong>Q @string.Format("{0:N2}", multa.Monto)</strong></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total Vencido:</strong></td>
                                        <td class="text-end">
                                            <strong class="text-danger fs-5">Q @string.Format("{0:N2}", Model.SaldoTotalPendiente)</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle-fill text-success fs-1"></i>
                            <p class="text-muted mt-3 mb-0">No hay pagos pendientes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Historial de Pagos Realizados -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-check-circle me-2"></i>
                        Historial de Pagos (@Model.AnioConsulta)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PagosMantenimiento.Any() || Model.MultasPagadas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Tipo</th>
                                        <th>Forma de Pago</th>
                                        <th class="text-end">Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Pagos de mantenimiento *@
                                    @foreach (var pago in Model.PagosMantenimiento)
                                    {
                                        <tr>
                                            <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-primary">Mantenimiento</span></td>
                                            <td>@(pago.FormaPago ?? "No especificado")</td>
                                            <td class="text-end">Q @string.Format("{0:N2}", pago.Monto)</td>
                                        </tr>
                                    }

                                    @* Multas pagadas *@
                                    @foreach (var multa in Model.MultasPagadas)
                                    {
                                        <tr>
                                            <td>@multa.Fecha.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-success">Multa Pagada</span></td>
                                            <td>@multa.Concepto.Substring(0, Math.Min(30, multa.Concepto.Length))...</td>
                                            <td class="text-end">Q @string.Format("{0:N2}", multa.Monto)</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total Pagado:</strong></td>
                                        <td class="text-end">
                                            <strong class="text-success fs-5">
                                                Q @string.Format("{0:N2}", Model.TotalPagosMantenimiento + Model.TotalMultasPagadas)
                                            </strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        @if (Model.UltimoPago != null)
                        {
                            <div class="alert alert-info mt-3 mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Último pago:</strong> @Model.UltimoPago.FechaPago.ToString("dd/MM/yyyy")
                                (hace @Model.DiaSinPagar días)
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-3 mb-0">No hay pagos registrados en @Model.AnioConsulta</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen de Multas -->
    @if (Model.MultasPendientes.Any() || Model.MultasPagadas.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Resumen de Multas
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h6 class="text-muted">Total de Multas</h6>
                        <h3 class="text-primary">@(Model.MultasPendientes.Count + Model.MultasPagadas.Count)</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Multas Pendientes</h6>
                        <h3 class="text-danger">
                            @Model.MultasPendientes.Count
                            <small class="fs-6">(Q @string.Format("{0:N2}", Model.TotalMultasPendientes))</small>
                        </h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Multas Pagadas</h6>
                        <h3 class="text-success">
                            @Model.MultasPagadas.Count
                            <small class="fs-6">(Q @string.Format("{0:N2}", Model.TotalMultasPagadas))</small>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Botones de acción -->
    <div class="text-center mt-4 mb-5">
        <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
            <i class="bi bi-arrow-left me-2"></i>Nueva Búsqueda
        </a>
        <button onclick="window.print()" class="btn btn-primary btn-lg">
            <i class="bi bi-printer me-2"></i>Imprimir Estado de Cuenta
        </button>
    </div>
</div>

<style>
    @@media print {
        .breadcrumb, .btn, nav {
            display: none !important;
        }

        .card {
            page-break-inside: avoid;
        }
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>
