@{
    ViewData["Title"] = "Estado de Cuenta";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 mb-3">
                    <i class="bi bi-file-earmark-text text-primary me-3"></i>
                    Estado de Cuenta
                </h1>
                <p class="lead text-muted">
                    Consulte el estado financiero de las residencias del residencial
                </p>
            </div>

            <!-- Mensajes -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Card principal de búsqueda -->
            <div class="card border-0 shadow-lg mb-5">
                <div class="card-header bg-primary text-white py-4">
                    <h4 class="mb-0">
                        <i class="bi bi-search me-2"></i>Buscar Residencia
                    </h4>
                </div>
                <div class="card-body p-5">
                    <form id="formBusqueda">
                        <!-- Tipo de búsqueda -->
                        <div class="mb-4">
                            <label class="form-label fw-bold fs-5">¿Cómo desea buscar?</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="criterio" id="criterioNumero" value="numero" checked>
                                <label class="btn btn-outline-primary btn-lg" for="criterioNumero">
                                    <i class="bi bi-house-door d-block fs-3 mb-2"></i>
                                    Por Número de Residencia
                                </label>

                                <input type="radio" class="btn-check" name="criterio" id="criterioPropietario" value="propietario">
                                <label class="btn btn-outline-primary btn-lg" for="criterioPropietario">
                                    <i class="bi bi-person d-block fs-3 mb-2"></i>
                                    Por Propietario
                                </label>

                                <input type="radio" class="btn-check" name="criterio" id="criterioCluster" value="cluster">
                                <label class="btn btn-outline-primary btn-lg" for="criterioCluster">
                                    <i class="bi bi-building d-block fs-3 mb-2"></i>
                                    Por Cluster
                                </label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Campo de búsqueda por número -->
                        <div id="busquedaNumero" class="campo-busqueda">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Cluster *</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                                        <select class="form-select" id="inputClusterNumero">
                                            <option value="">-- Seleccione un cluster --</option>
                                            @foreach (var cluster in ViewBag.Clusters as SelectList)
                                            {
                                                <option value="@cluster.Value">@cluster.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Número de Residencia *</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text"><i class="bi bi-hash"></i></span>
                                        <input type="number" class="form-control" id="inputNumero"
                                               placeholder="Ej: 123" min="1">
                                    </div>
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Seleccione el cluster y luego ingrese el número de residencia
                            </small>
                        </div>

                        <!-- Campo de búsqueda por propietario -->
                        <div id="busquedaPropietario" class="campo-busqueda" style="display: none;">
                            <label class="form-label fw-bold">Nombre del Propietario</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                <input type="text" class="form-control" id="inputPropietario"
                                       placeholder="Ingrese el nombre del propietario">
                            </div>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Puede ingresar el nombre completo o parcial
                            </small>
                        </div>

                        <!-- Campo de búsqueda por cluster -->
                        <div id="busquedaCluster" class="campo-busqueda" style="display: none;">
                            <label class="form-label fw-bold">Cluster</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-buildings"></i></span>
                                <select class="form-select" id="inputCluster">
                                    <option value="">-- Seleccione un cluster --</option>
                                    @foreach (var cluster in ViewBag.Clusters as SelectList)
                                    {
                                        <option value="@cluster.Value">@cluster.Text</option>
                                    }
                                </select>
                            </div>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Se mostrarán todas las residencias del cluster seleccionado
                            </small>
                        </div>

                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-search me-2"></i>Buscar Estado de Cuenta
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Resultados de búsqueda -->
            <div id="resultadosBusqueda" style="display: none;">
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-check-circle me-2"></i>Resultados de la Búsqueda
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Cluster</th>
                                        <th>Residencia</th>
                                        <th>Propietario</th>
                                        <th class="text-center">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="tablaResultados">
                                    <!-- Los resultados se cargarán aquí -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loader -->
            <div id="loader" style="display: none;" class="text-center my-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-3 text-muted">Buscando residencias...</p>
            </div>

            <!-- Información útil -->
            <div class="alert alert-info mt-5" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-lightbulb me-2"></i>Información
                </h5>
                <ul class="mb-0">
                    <li>El estado de cuenta muestra el historial de pagos y multas de cada residencia</li>
                    <li>Para buscar por número de residencia, primero seleccione el cluster</li>
                    <li>Puede consultar por año seleccionando el año deseado en la vista de detalles</li>
                    <li>El sistema calcula automáticamente si hay morosidad (más de 10 días sin pagar)</li>
                    <li>Si busca por propietario, se mostrarán todas sus residencias</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cambiar campo de búsqueda según el criterio seleccionado
            $('input[name="criterio"]').change(function() {
                $('.campo-busqueda').hide();
                var criterio = $(this).val();

                if (criterio === 'numero') {
                    $('#busquedaNumero').show();
                } else if (criterio === 'propietario') {
                    $('#busquedaPropietario').show();
                } else if (criterio === 'cluster') {
                    $('#busquedaCluster').show();
                }
            });

            // Manejar el formulario de búsqueda
            $('#formBusqueda').submit(function(e) {
                e.preventDefault();

                var criterio = $('input[name="criterio"]:checked').val();
                var valor = '';
                var idCluster = null;

                if (criterio === 'numero') {
                    idCluster = $('#inputClusterNumero').val();
                    valor = $('#inputNumero').val();

                    if (!idCluster) {
                        alert('Por favor seleccione un cluster');
                        return;
                    }
                    if (!valor) {
                        alert('Por favor ingrese el número de residencia');
                        return;
                    }
                } else if (criterio === 'propietario') {
                    valor = $('#inputPropietario').val();
                    if (!valor) {
                        alert('Por favor ingrese el nombre del propietario');
                        return;
                    }
                } else if (criterio === 'cluster') {
                    valor = $('#inputCluster').val();
                    if (!valor) {
                        alert('Por favor seleccione un cluster');
                        return;
                    }
                }

                // Mostrar loader
                $('#resultadosBusqueda').hide();
                $('#loader').show();

                // Hacer la búsqueda
                $.ajax({
                    url: '@Url.Action("BuscarResidencias", "EstadoCuenta")',
                    type: 'GET',
                    data: {
                        criterio: criterio,
                        valor: valor,
                        idCluster: idCluster
                    },
                    success: function(response) {
                        $('#loader').hide();

                        if (response.success) {
                            mostrarResultados(response.data);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        $('#loader').hide();
                        alert('Error al realizar la búsqueda. Intente nuevamente.');
                    }
                });
            });

            function mostrarResultados(residencias) {
                var html = '';

                $.each(residencias, function(index, r) {
                    html += '<tr>';
                    html += '<td><strong>' + r.cluster + '</strong></td>';
                    html += '<td><span class="badge bg-info">Residencia #' + r.numero + '</span></td>';
                    html += '<td>' + r.propietario + '</td>';
                    html += '<td class="text-center">';
                    html += '<a href="@Url.Action("Ver", "EstadoCuenta")/' + r.idResidencia + '" class="btn btn-primary btn-sm">';
                    html += '<i class="bi bi-file-earmark-text me-1"></i>Ver Estado de Cuenta';
                    html += '</a>';
                    html += '</td>';
                    html += '</tr>';
                });

                $('#tablaResultados').html(html);
                $('#resultadosBusqueda').slideDown();

                // Scroll a los resultados
                $('html, body').animate({
                    scrollTop: $('#resultadosBusqueda').offset().top - 100
                }, 500);
            }
        });
    </script>

    <style>
        .btn-group label {
            transition: all 0.3s ease;
        }

            .btn-group label:hover {
                transform: translateY(-2px);
            }

        .btn-check:checked + label {
            transform: scale(1.05);
        }

        .card {
            transition: all 0.3s ease;
        }

        .input-group-lg .form-control,
        .input-group-lg .form-select {
            font-size: 1.1rem;
        }
    </style>
}
