@model ARSAN_Web.Models.Inquilino

@{
    ViewData["Title"] = "Detalles del Inquilino";
}

<div class="container mt-4">
    <h1 class="mb-4">Detalles del Inquilino</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Información Completa</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreCompleto)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Dpi)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Dpi)</span>
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.EstadoCivil)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EstadoCivil)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.TipoLicencia)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@Html.DisplayFor(model => model.TipoLicencia)</span>
                </dd>
            </dl>

            <hr />

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdInquilino" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>