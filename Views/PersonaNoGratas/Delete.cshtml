@model ARSAN_Web.Models.PersonaNoGrata

@{
    ViewData["Title"] = "Eliminar - Persona No Grata";
}

<div class="mb-4">
    <h1>Eliminar Persona No Grata</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">⚠️ ¿Está seguro que desea eliminar este registro?</h4>
    <p class="mb-0">Esta acción no se puede deshacer. El registro será eliminado permanentemente del sistema.</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Información del Registro a Eliminar</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DPI</dt>
            <dd class="col-sm-9">
                <strong>@Html.DisplayFor(model => model.Dpi)</strong>
            </dd>

            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-3">Residencial</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Residencial.Nombre)
            </dd>

            <dt class="col-sm-3">Motivo</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Motivo)
            </dd>

            <dt class="col-sm-3">Fecha de Registro</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-danger">⚠️ NO GRATO - ACTIVO</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="IdPNG" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Sí, Eliminar Registro
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>