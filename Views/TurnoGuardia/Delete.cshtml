@model ARSAN_Web.Models.TurnoGuardia

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Turnos de Guardia</a></li>
                        <li class="breadcrumb-item active">Eliminar</li>
                    </ol>
                </nav>
                <h2 class="text-danger">
                    <i class="bi bi-trash me-2"></i>Eliminar Turno de Guardia
                </h2>
                <p class="text-muted">Confirme la eliminación de este turno</p>
            </div>

            <div class="alert alert-danger border-danger shadow-sm" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>¡Atención!
                </h5>
                <p class="mb-0">
                    Está a punto de eliminar este turno de guardia de forma permanente.
                    Esta acción <strong>NO</strong> se puede deshacer.
                </p>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text me-2"></i>Información del Turno
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">ID de Turno</label>
                        <p class="fs-5 mb-0 fw-bold text-danger">#@Model.IdTurno</p>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Guardia</label>
                            <div class="alert alert-light border mb-0">
                                <i class="bi bi-shield-check fs-3 text-danger me-2"></i>
                                <strong>@Model.Guardia.NombreCompleto</strong>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Garita</label>
                            <div class="alert alert-light border mb-0">
                                <i class="bi bi-door-closed fs-3 text-danger me-2"></i>
                                <strong>@Model.Garita.Nombre</strong>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Fecha de Inicio</label>
                            <p class="fs-6 mb-0">
                                <i class="bi bi-calendar-check text-danger me-2"></i>
                                @Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Fecha de Fin</label>
                            <p class="fs-6 mb-0">
                                <i class="bi bi-calendar-x text-danger me-2"></i>
                                @(Model.FechaFin?.ToString("dd/MM/yyyy HH:mm") ?? "No definida")
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <hr>
                        <div class="mb-0">
                            <label class="text-muted small fw-bold text-uppercase">Observaciones</label>
                            <p class="mb-0">@Model.Observaciones</p>
                        </div>
                    }
                </div>
            </div>

            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Consecuencias
                </h6>
                <ul class="mb-0 small">
                    <li>Se eliminará permanentemente el registro de este turno</li>
                    <li>Esta información no podrá ser recuperada</li>
                    <li>Los reportes históricos no incluirán este turno</li>
                </ul>
            </div>

            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdTurno" />

                        <div class="mb-4">
                            <h5 class="text-danger">¿Está seguro que desea eliminar este turno?</h5>
                            <p class="text-muted mb-0">
                                Esta acción eliminará permanentemente el turno de
                                <strong>@Model.Guardia.NombreCompleto</strong> en <strong>@Model.Garita.Nombre</strong>.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>No, Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash me-2"></i>Sí, Eliminar Turno
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Details" asp-route-id="@Model.IdTurno" class="btn btn-link text-decoration-none">
                    <i class="bi bi-eye me-1"></i>Ver detalles completos del turno
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .alert {
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .alert-warning {
        border-left-color: #ffc107;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }

    hr {
        opacity: 0.1;
    }
</style>
