@{
    ViewData["Title"] = "Consulta 13 - Día de Mayor Recaudación";
}

<div class="container mt-4">
    <h2>📅 Consulta #13: Día del Mes con Mayor Recaudación</h2>
    <p class="text-muted">Identifica el día del mes que más dinero se recibe</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-10">
                        <label for="anio" class="form-label">Año:</label>
                        <input type="number" name="anio" id="anio" class="form-control"
                               value="@ViewBag.Anio" min="2020" max="2030" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Resultado != null)
    {
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">📊 Día con Mayor Recaudación</h5>
            </div>
            <div class="card-body text-center">
                <h1 class="display-1 text-primary">@ViewBag.Resultado.DiaDeMes</h1>
                <p class="lead">Día del mes</p>
                <hr />
                <h3 class="text-success">Q @ViewBag.Resultado.Recaudado?.ToString("N2")</h3>
                <p class="text-muted">Total recaudado en el año @ViewBag.Anio</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No hay recibos registrados para el año @ViewBag.Anio.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>