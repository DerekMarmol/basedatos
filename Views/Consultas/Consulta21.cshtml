@{
    ViewData["Title"] = "Consulta 21 - Concepto de Multa Más Utilizado";
}

<div class="container mt-4">
    <h2>⚠️ Consulta #21: Concepto de Multa Más Utilizado</h2>
    <p class="text-muted">Identifica el tipo de multa más frecuente</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Resultado != null)
    {
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">🏆 Concepto Más Frecuente</h5>
            </div>
            <div class="card-body text-center">
                <h2 class="text-danger">@ViewBag.Resultado.Concepto</h2>
                <hr />
                <h1 class="display-3 text-primary">@ViewBag.Resultado.Veces</h1>
                <p class="lead">veces aplicado</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">No hay multas registradas en el período seleccionado.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>