@{
    ViewData["Title"] = "Consulta 4 - Vehículos Nocturnos";
}

<div class="container mt-4">
    <h2>🌙 Consulta #4: Vehículos que Ingresan entre 23:00 y 01:00</h2>
    <p class="text-muted">Muestra los vehículos que pertenecen a personas que ingresan entre las 23:00 y la 01:00</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.VehiculosNocturnos != null && ViewBag.VehiculosNocturnos.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total de vehículos detectados:</strong> @ViewBag.VehiculosNocturnos.Count
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Placa</th>
                        <th>Propietario</th>
                        <th>Ubicación</th>
                        <th>Total Ingresos Nocturnos</th>
                        <th>Últimos Ingresos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehiculo in ViewBag.VehiculosNocturnos)
                    {
                        <tr>
                            <td><span class="badge bg-dark">@vehiculo.Placa</span></td>
                            <td><strong>@vehiculo.Propietario</strong></td>
                            <td>@vehiculo.Cluster - Casa #@vehiculo.Casa</td>
                            <td><span class="badge bg-warning text-dark fs-6">@vehiculo.TotalIngresos</span></td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#modal_@vehiculo.Placa.Replace(" ", "")">
                                    Ver Detalles
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="modal_@vehiculo.Placa.Replace(" ", "")" tabindex="-1">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Ingresos Nocturnos - @vehiculo.Placa</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table table-sm">
                                                    <thead>
                                                        <tr>
                                                            <th>Fecha</th>
                                                            <th>Hora</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var ingreso in vehiculo.Ingresos.Take(10))
                                                        {
                                                            <tr>
                                                                <td>@ingreso.Fecha.ToString("dd/MM/yyyy")</td>
                                                                <td>@ingreso.Hora.ToString(@"hh\:mm")</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                                @if (vehiculo.Ingresos.Count > 10)
                                                {
                                                    <p class="text-muted"><small>Mostrando los últimos 10 de @vehiculo.Ingresos.Count ingresos</small></p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>No hay registros.</strong> No se encontraron vehículos que ingresen frecuentemente en horario nocturno.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>
