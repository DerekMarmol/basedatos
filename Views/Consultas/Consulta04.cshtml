@{
    ViewData["Title"] = "Consulta 4 - Intentos de Personas No Gratas";
}

<div class="container mt-4">
    <h2>⚠️ Consulta #4: Intentos de Ingreso de Personas No Gratas</h2>
    <p class="text-muted">Detecta intentos de ingreso de personas bloqueadas</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Intentos != null && ViewBag.Intentos.Count > 0)
    {
        <div class="alert alert-danger">
            <strong>⚠️ ¡ALERTA!</strong> Se detectaron @ViewBag.Intentos.Count intentos de ingreso de personas no gratas.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th>ID Registro</th>
                        <th>Visitante</th>
                        <th>DPI</th>
                        <th>Motivo Bloqueo</th>
                        <th>Fecha Intento</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var intento in ViewBag.Intentos)
                    {
                        <tr>
                            <td>@intento.IdRegistro</td>
                            <td><strong>@intento.Visitante</strong></td>
                            <td>@intento.Dpi</td>
                            <td><span class="badge bg-danger">@intento.MotivoBloqueo</span></td>
                            <td>@intento.FechaIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>✓ Sin alertas.</strong> No se detectaron intentos de ingreso de personas no gratas en el período seleccionado.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>