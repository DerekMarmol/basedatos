@{
    ViewData["Title"] = "Consulta 17 - Inquilinos que son Propietarios";
}

<div class="container mt-4">
    <h2>🏠 Consulta #17: Inquilinos que También son Propietarios</h2>
    <p class="text-muted">Personas que alquilan una casa pero son dueños de otra</p>

    @if (ViewBag.InquilinosPropietarios != null && ViewBag.InquilinosPropietarios.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total:</strong> @ViewBag.InquilinosPropietarios.Count personas encontradas
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>DPI</th>
                        <th colspan="2" class="table-warning text-center">Como Inquilino</th>
                        <th colspan="2" class="table-success text-center">Como Propietario</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Cluster</th>
                        <th>Casa</th>
                        <th>Cluster</th>
                        <th>Casa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var persona in ViewBag.InquilinosPropietarios)
                    {
                        <tr>
                            <td><strong>@persona.NombreInquilino</strong></td>
                            <td>@persona.Dpi</td>
                            <td><span class="badge bg-warning text-dark">@persona.ClusterInquilino</span></td>
                            <td>@persona.CasaInquilino</td>
                            <td><span class="badge bg-success">@persona.ClusterPropietario</span></td>
                            <td>@persona.CasaPropietario</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>No hay coincidencias.</strong> No existen inquilinos que también sean propietarios.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>