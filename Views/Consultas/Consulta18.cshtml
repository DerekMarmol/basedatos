@{
    ViewData["Title"] = "Consulta 18 - Propietarios con Licencia A";
}

<div class="container mt-4">
    <h2>🚗 Consulta #18: Propietarios con Licencia Tipo A</h2>
    <p class="text-muted">Listado de propietarios que poseen licencia tipo A</p>

    @if (ViewBag.Propietarios != null && ViewBag.Propietarios.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total:</strong> @ViewBag.Total propietarios con licencia tipo A
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>DPI</th>
                        <th>Teléfono</th>
                        <th>Licencia</th>
                        <th>Ubicación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in ViewBag.Propietarios)
                    {
                        <tr>
                            <td>@prop.IdPropietario</td>
                            <td><strong>@prop.NombreCompleto</strong></td>
                            <td>@prop.Dpi</td>
                            <td>@prop.Telefono</td>
                            <td><span class="badge bg-success">@prop.TipoLicencia</span></td>
                            <td>@prop.Cluster - Casa #@prop.NumeroCasa</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontraron propietarios con licencia tipo A.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>