@{
    ViewData["Title"] = "Consulta 6 - Propietarios Diana II";
}

<div class="container mt-4">
    <h2>👥 Consulta #6: Propietarios Diana II Casados Menores de 30</h2>
    <p class="text-muted">Listado de propietarios del cluster Diana II que son casados y menores de 30 años</p>

    @if (ViewBag.Propietarios != null && ViewBag.Propietarios.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total encontrados:</strong> @ViewBag.Propietarios.Count propietarios
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>DPI</th>
                        <th>Teléfono</th>
                        <th>Edad</th>
                        <th>Estado Civil</th>
                        <th>Casa #</th>
                        <th>Cluster</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in ViewBag.Propietarios)
                    {
                        <tr>
                            <td>@prop.IdPropietario</td>
                            <td><strong>@prop.NombreCompleto</strong></td>
                            <td>@prop.Dpi</td>
                            <td>@prop.Telefono</td>
                            <td><span class="badge bg-info">@prop.Edad años</span></td>
                            <td>@prop.EstadoCivil</td>
                            <td><span class="badge bg-primary">@prop.NumeroCasa</span></td>
                            <td>@prop.Cluster</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontraron propietarios que cumplan los criterios.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>