@{
    ViewData["Title"] = "Consulta 9 - Top Casas con Más Visitas";
}

<div class="container mt-4">
    <h2>🏠 Consulta #9: Top Casas con Más Visitas</h2>
    <p class="text-muted">Ranking de casas que reciben más visitas</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label for="topN" class="form-label">Top:</label>
                        <input type="number" name="topN" id="topN" class="form-control" value="@ViewBag.TopN" min="1" max="20" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.TopCasas != null && ViewBag.TopCasas.Count > 0)
    {
        <div class="row">
            @for (int i = 0; i < ViewBag.TopCasas.Count; i++)
            {
                var casa = ViewBag.TopCasas[i];
                <div class="col-md-6 mb-3">
                    <div class="card @(i == 0 ? "border-warning" : i == 1 ? "border-secondary" : i == 2 ? "border-primary" : "")">
                        <div class="card-body">
                            <h4>
                                @if (i == 0)
                                {
                                    <span class="badge bg-warning text-dark">🥇 #1</span>
                                }
                                else if (i == 1)
                                {

                                    <span class="badge bg-secondary">🥈 #2</span>
                                }
                                else if (i == 2)
                                {

                                    <span class="badge bg-primary">🥉 #3</span>
                                }
                                else
                                {

                                    <span class="badge bg-info">#@(i + 1)</span>
                                }
                                @casa.Cluster - Casa #@casa.Casa
                            </h4>
                            <p class="fs-3 mb-0"><strong>@casa.TotalVisitas</strong> visitas</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">No hay visitas registradas en el período.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>
