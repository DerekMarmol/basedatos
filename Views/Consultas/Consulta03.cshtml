@{
    ViewData["Title"] = "Consulta 3 - Reporte de Viviendas";
}

<div class="container mt-4">
    <h2>🏘️ Consulta #3: Reporte de Viviendas</h2>
    <p class="text-muted">Listado completo de todas las viviendas con propietarios e inquilinos</p>

    @if (ViewBag.Viviendas != null && ViewBag.Viviendas.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total de viviendas:</strong> @ViewBag.Viviendas.Count
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Cluster</th>
                        <th>Casa #</th>
                        <th>Estado</th>
                        <th>Propietario</th>
                        <th>DPI Propietario</th>
                        <th>Tel. Propietario</th>
                        <th>Inquilino</th>
                        <th>DPI Inquilino</th>
                        <th>Tel. Inquilino</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vivienda in ViewBag.Viviendas)
                    {
                        <tr>
                            <td><strong>@vivienda.Cluster</strong></td>
                            <td class="text-center"><span class="badge bg-primary">@vivienda.NumeroCasa</span></td>
                            <td>
                                @if (vivienda.Estado == "ocupada")
                                {
                                    <span class="badge bg-success">Ocupada</span>
                                }
                                else if (vivienda.Estado == "alquilada")
                                {
                                    <span class="badge bg-warning text-dark">Alquilada</span>
                                }
                                else if (vivienda.Estado == "vacia")
                                {
                                    <span class="badge bg-secondary">Vacía</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@vivienda.Estado</span>
                                }
                            </td>
                            <td>@vivienda.Propietario</td>
                            <td><small>@vivienda.DpiPropietario</small></td>
                            <td><small>@vivienda.TelefonoPropietario</small></td>
                            <td>
                                @if (vivienda.Inquilino != "Sin inquilino")
                                {
                                    @vivienda.Inquilino
                                }
                                else
                                {
                                    <span class="text-muted">@vivienda.Inquilino</span>
                                }
                            </td>
                            <td><small class="text-muted">@vivienda.DpiInquilino</small></td>
                            <td><small class="text-muted">@vivienda.TelefonoInquilino</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>No hay viviendas registradas.</strong>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>