@{
    ViewData["Title"] = "Consulta 23 - Mes con Más Multas por Desorden";
}

<div class="container mt-4">
    <h2>📊 Consulta #23: Mes con Más Multas por Desorden</h2>
    <p class="text-muted">Identifica el mes con mayor incidencia de multas por desorden</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-10">
                        <label for="anio" class="form-label">Año:</label>
                        <input type="number" name="anio" id="anio" class="form-control"
                               value="@ViewBag.Anio" min="2020" max="2030" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Resultado != null)
    {
        var meses = new[] { "", "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio",
        "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" };
        <div class="card border-warning">
            <div class="card-header bg-warning">
                <h5 class="mb-0">📅 Mes con Mayor Incidencia</h5>
            </div>
            <div class="card-body text-center">
                <h1 class="display-2 text-danger">@meses[ViewBag.Resultado.Mes]</h1>
                <hr />
                <h2 class="text-primary">@ViewBag.Resultado.Total</h2>
                <p class="lead">multas por desorden en @ViewBag.Anio</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">No hay multas por desorden en el año @ViewBag.Anio.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>