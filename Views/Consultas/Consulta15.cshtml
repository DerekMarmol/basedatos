@{
    ViewData["Title"] = "Consulta 15 - Vehículos No Permitidos Detectados";
}

<div class="container mt-4">
    <h2>🚫 Consulta #15: Vehículos No Permitidos Detectados</h2>
    <p class="text-muted">Detecta ingresos de vehículos bloqueados</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.VehiculosDetectados != null && ViewBag.VehiculosDetectados.Count > 0)
    {
        <div class="alert alert-danger">
            <strong>⚠️ ¡ALERTA!</strong> Se detectaron @ViewBag.VehiculosDetectados.Count intentos de ingreso con vehículos no permitidos.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th>ID Registro</th>
                        <th>Visitante</th>
                        <th>Placa</th>
                        <th>Destino</th>
                        <th>Fecha Intento</th>
                        <th>Motivo Bloqueo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehiculo in ViewBag.VehiculosDetectados)
                    {
                        <tr>
                            <td>@vehiculo.IdRegistro</td>
                            <td><strong>@vehiculo.Visitante</strong></td>
                            <td><span class="badge bg-danger">@vehiculo.Placa</span></td>
                            <td>@vehiculo.Cluster - Casa #@vehiculo.Casa</td>
                            <td>@vehiculo.FechaIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@vehiculo.Motivo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>✓ Sin alertas.</strong> No se detectaron vehículos no permitidos en el período seleccionado.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>