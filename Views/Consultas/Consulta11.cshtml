@{
    ViewData["Title"] = "Consulta 11 - Visitas Abiertas";
}

<div class="container mt-4">
    <h2>🚪 Consulta #11: Visitas Abiertas (Sin Salida Registrada)</h2>
    <p class="text-muted">Visitantes que ingresaron pero no han registrado su salida</p>

    @if (ViewBag.VisitasAbiertas != null && ViewBag.VisitasAbiertas.Count > 0)
    {
        <div class="alert alert-warning">
            <strong>⚠️ Atención:</strong> Hay @ViewBag.VisitasAbiertas.Count visitas sin salida registrada.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>ID Registro</th>
                        <th>Visitante</th>
                        <th>Destino</th>
                        <th>Guardia Ingreso</th>
                        <th>Fecha/Hora Ingreso</th>
                        <th>Tiempo Dentro</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var visita in ViewBag.VisitasAbiertas)
                    {
                        var tiempoDentro = DateTime.Now - visita.FechaIngreso;
                        <tr>
                            <td>@visita.IdRegistro</td>
                            <td><strong>@visita.Visitante</strong></td>
                            <td>
                                <strong>@visita.Cluster</strong><br />
                                <span class="badge bg-primary">Casa #@visita.Casa</span>
                            </td>
                            <td>@visita.GuardiaIngreso</td>
                            <td>@visita.FechaIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (tiempoDentro.TotalHours >= 24)
                                {
                                    <span class="badge bg-danger">@tiempoDentro.Days días</span>
                                }
                                else if (tiempoDentro.TotalHours >= 12)
                                {
                                    <span class="badge bg-warning text-dark">@((int)tiempoDentro.TotalHours) horas</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@((int)tiempoDentro.TotalHours) horas</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>✓ Todo en orden.</strong> No hay visitas abiertas sin salida registrada.
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>