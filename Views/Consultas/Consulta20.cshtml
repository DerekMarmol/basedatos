@{
    ViewData["Title"] = "Consulta 20 - Bitácora Diaria";
}

<div class="container mt-4">
    <h2>📅 Consulta #20: Bitácora Diaria de Ingresos y Salidas</h2>
    <p class="text-muted">Registro diario de movimientos de visitas</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Bitacora != null && ViewBag.Bitacora.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Ingresos</th>
                        <th>Salidas</th>
                        <th>Visitas Abiertas</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dia in ViewBag.Bitacora)
                    {
                        var abiertas = dia.Ingresos - dia.Salidas;
                        <tr>
                            <td><strong>@dia.Dia.ToString("dd/MM/yyyy")</strong></td>
                            <td><span class="badge bg-success">↓ @dia.Ingresos</span></td>
                            <td><span class="badge bg-info">↑ @dia.Salidas</span></td>
                            <td><span class="badge bg-warning text-dark">@abiertas</span></td>
                            <td>
                                @if (abiertas == 0)
                                {
                                    <span class="text-success">✓ Cerrado</span>
                                }
                                else
                                {
                                    <span class="text-warning">⚠ Pendientes</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No hay movimientos registrados en el período.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>