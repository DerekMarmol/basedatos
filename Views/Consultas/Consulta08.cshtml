@{
    ViewData["Title"] = "Consulta 8 - Nunca Miembro de Junta";
}

<div class="container mt-4">
    <h2>📋 Consulta #8: Propietarios que Nunca Han Sido Miembros de Junta</h2>
    <p class="text-muted">Lista de propietarios que no han participado en ninguna junta directiva</p>

    @if (ViewBag.Propietarios != null && ViewBag.Propietarios.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total:</strong> @ViewBag.Propietarios.Count propietarios nunca han sido de junta directiva
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>DPI</th>
                        <th>Teléfono</th>
                        <th>Cluster</th>
                        <th>Casa #</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in ViewBag.Propietarios)
                    {
                        <tr>
                            <td>@prop.IdPropietario</td>
                            <td><strong>@prop.NombreCompleto</strong></td>
                            <td>@prop.Dpi</td>
                            <td>@prop.Telefono</td>
                            <td>@prop.Cluster</td>
                            <td><span class="badge bg-primary">@prop.NumeroCasa</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">Todos los propietarios han participado en juntas directivas.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>