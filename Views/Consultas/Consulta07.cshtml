@{
    ViewData["Title"] = "Consulta 7 - Más Veces Presidente";
}

<div class="container mt-4">
    <h2>🏅 Consulta #7: Persona que Más Veces Ha Sido Presidente</h2>
    <p class="text-muted">Identifica al propietario con más períodos como presidente de junta directiva</p>

    @if (ViewBag.Resultado != null)
    {
        <div class="card border-warning">
            <div class="card-header bg-warning">
                <h5 class="mb-0">🏆 Presidente Más Frecuente</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>ID Propietario:</th>
                        <td>@ViewBag.Resultado.IdPropietario</td>
                    </tr>
                    <tr>
                        <th>Nombre Completo:</th>
                        <td><h5>@ViewBag.Resultado.NombreCompleto</h5></td>
                    </tr>
                    <tr>
                        <th>DPI:</th>
                        <td>@ViewBag.Resultado.Dpi</td>
                    </tr>
                    <tr>
                        <th>Teléfono:</th>
                        <td>@ViewBag.Resultado.Telefono</td>
                    </tr>
                    <tr>
                        <th>Veces como Presidente:</th>
                        <td><span class="badge bg-success fs-5">@ViewBag.Resultado.VecesPresidente veces</span></td>
                    </tr>
                    <tr>
                        <th>Años:</th>
                        <td>@ViewBag.Resultado.Anios</td>
                    </tr>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontraron presidentes registrados.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>
