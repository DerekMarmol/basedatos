@{
    ViewData["Title"] = "Consulta 2 - Visitas de Hoy";
}

<div class="container mt-4">
    <h2>🚪 Consulta #2: Visitas de Hoy</h2>
    <p class="text-muted">Muestra todas las visitas registradas el día de hoy</p>

    @if (ViewBag.Visitas != null && ViewBag.Visitas.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total de visitas hoy:</strong> @ViewBag.Visitas.Count
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID Registro</th>
                        <th>Visitante</th>
                        <th>Destino</th>
                        <th>Garita</th>
                        <th>Guardia Ingreso</th>
                        <th>Fecha Ingreso</th>
                        <th>Fecha Salida</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var visita in ViewBag.Visitas)
                    {
                        <tr>
                            <td>@visita.IdRegistro</td>
                            <td>@visita.Visitante</td>
                            <td>
                                <strong>@visita.Cluster</strong><br />
                                <span class="badge bg-primary">Casa #@visita.Residencia</span>
                            </td>
                            <td>@visita.Garita</td>
                            <td>@visita.GuardiaIngreso</td>
                            <td>@visita.FechaIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (visita.FechaSalida != null)
                                {
                                    @visita.FechaSalida?.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@visita.Motivo</td>
                            <td>
                                @if (visita.FechaSalida == null)
                                {
                                    <span class="badge bg-success">Dentro</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Salió</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>No hay visitas registradas el día de hoy.</strong>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>