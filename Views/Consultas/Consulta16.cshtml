@{
    ViewData["Title"] = "Consulta 16 - Visitantes Frecuentes";
}

<div class="container mt-4">
    <h2>👥 Consulta #16: Visitantes Frecuentes</h2>
    <p class="text-muted">Identifica personas que visitan el residencial frecuentemente</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label for="minVisitas" class="form-label">Mínimo:</label>
                        <input type="number" name="minVisitas" id="minVisitas" class="form-control"
                               value="@ViewBag.MinVisitas" min="1" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.VisitantesFrecuentes != null && ViewBag.VisitantesFrecuentes.Count > 0)
    {
        <div class="alert alert-info">
            <strong>Total:</strong> @ViewBag.VisitantesFrecuentes.Count visitantes frecuentes encontrados
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Total Visitas</th>
                        <th>Frecuencia</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var visitante in ViewBag.VisitantesFrecuentes)
                    {
                        <tr>
                            <td>@visitante.IdVisitante</td>
                            <td><strong>@visitante.NombreCompleto</strong></td>
                            <td><span class="badge bg-primary fs-6">@visitante.TotalVisitas</span></td>
                            <td>
                                @if (visitante.TotalVisitas >= 10)
                                {
                                    <span class="badge bg-danger">Muy Frecuente</span>
                                }
                                else if (visitante.TotalVisitas >= 5)
                                {
                                    <span class="badge bg-warning text-dark">Frecuente</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Ocasional</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontraron visitantes frecuentes en el período.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>