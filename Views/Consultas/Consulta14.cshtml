@{
    ViewData["Title"] = "Consulta 14 - Residencia con Más Recibos";
}

<div class="container mt-4">
    <h2>🧾 Consulta #14: Residencia con Más Recibos</h2>
    <p class="text-muted">Identifica la casa que ha generado más recibos de pago</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaIni" class="form-label">Fecha Inicio:</label>
                        <input type="date" name="fechaIni" id="fechaIni" class="form-control"
                               value="@ViewBag.FechaIni?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin:</label>
                        <input type="date" name="fechaFin" id="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Resultado != null)
    {
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">🏆 Residencia Más Pagadora</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Cluster:</th>
                        <td>@ViewBag.Resultado.Cluster</td>
                    </tr>
                    <tr>
                        <th>Casa #:</th>
                        <td><span class="badge bg-primary fs-5">@ViewBag.Resultado.Casa</span></td>
                    </tr>
                    <tr>
                        <th>Total de Recibos:</th>
                        <td><h3 class="text-success mb-0">@ViewBag.Resultado.TotalRecibos</h3></td>
                    </tr>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontraron recibos en el período seleccionado.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>