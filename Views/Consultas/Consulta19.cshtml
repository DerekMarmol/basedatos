@{
    ViewData["Title"] = "Consulta 19 - Cobro Extra por Vehículos";
}

<div class="container mt-4">
    <h2>💰 Consulta #19: Cobro Extra por Exceso de Vehículos</h2>
    <p class="text-muted">Verifica si una vivienda debe pagar extra por tener más de 4 vehículos</p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label for="cluster" class="form-label">Cluster:</label>
                        <select name="cluster" id="cluster" class="form-select" required>
                            <option value="">-- Seleccione un cluster --</option>
                            @if (ViewBag.Clusters != null)
                            {
                                foreach (var cluster in ViewBag.Clusters)
                                {
                                    <option value="@cluster.Nombre">@cluster.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label for="numeroCasa" class="form-label">Número de Casa:</label>
                        <input type="number" name="numeroCasa" id="numeroCasa" class="form-control" required min="1" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Consultar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Cluster != null)
    {
        <div class="card">
            <div class="card-header @(ViewBag.DebePagarExtra == "Sí" ? "bg-warning" : "bg-success") text-white">
                <h5 class="mb-0">Resultado: @ViewBag.Cluster - Casa #@ViewBag.NumeroCasa</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Propietario:</th>
                        <td>@ViewBag.Propietario</td>
                    </tr>
                    <tr>
                        <th>Total de Vehículos:</th>
                        <td><span class="badge bg-primary fs-5">@ViewBag.TotalVehiculos</span></td>
                    </tr>
                    <tr>
                        <th>¿Debe Pagar Extra?</th>
                        <td>
                            @if (ViewBag.DebePagarExtra == "Sí")
                            {
                                <span class="badge bg-warning text-dark fs-6">SÍ</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">NO</span>
                            }
                        </td>
                    </tr>
                    @if (ViewBag.DebePagarExtra == "Sí")
                    {
                        <tr>
                            <th>Vehículos Extra:</th>
                            <td>@ViewBag.VehiculosExtra</td>
                        </tr>
                        <tr>
                            <th>Monto Extra a Pagar:</th>
                            <td><h4 class="text-danger mb-0">Q @ViewBag.MontoExtra.ToString("N2")</h4></td>
                        </tr>
                    }
                </table>

                @if (ViewBag.Vehiculos != null && ViewBag.Vehiculos.Count > 0)
                {
                    <h5 class="mt-4">Vehículos Registrados:</h5>
                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Marca</th>
                                <th>Línea</th>
                                <th>Año</th>
                                <th>Color</th>
                                <th>Placa</th>
                                <th>Tarjeta</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehiculo in ViewBag.Vehiculos)
                            {
                                <tr>
                                    <td>@vehiculo.Marca</td>
                                    <td>@vehiculo.Linea</td>
                                    <td>@vehiculo.Anio</td>
                                    <td>@vehiculo.Color</td>
                                    <td><span class="badge bg-secondary">@vehiculo.Placa</span></td>
                                    <td>@vehiculo.NumeroTarjeta</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Volver a Consultas</a>
    </div>
</div>