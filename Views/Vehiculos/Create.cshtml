@model ARSAN_Web.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<style>
    .validation-error {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }

    .alert-danger ul {
        margin-bottom: 0;
        padding-left: 20px;
    }
</style>

<h1>Crear Vehículo</h1>

<h4>Nuevo Vehículo</h4>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>❌ Error:</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label for="IdCluster" class="control-label">Cluster</label>
                <select id="IdCluster" class="form-control" asp-items="ViewBag.IdCluster">
                    <option value="">-- Seleccione un Cluster --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdResidencia" class="control-label">Residencia</label>
                <select asp-for="IdResidencia" class="form-control" asp-items="ViewBag.IdResidencia">
                    <option value="">-- Seleccione primero un Cluster --</option>
                </select>
                <span asp-validation-for="IdResidencia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Marca" class="control-label">Marca</label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Linea" class="control-label">Línea</label>
                <input asp-for="Linea" class="form-control" />
                <span asp-validation-for="Linea" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Anio" class="control-label">Año</label>
                <input asp-for="Anio" class="form-control" type="number" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label">Color</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Placa" class="control-label">Placa</label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroTarjeta" class="control-label">Número de Tarjeta</label>
                <input asp-for="NumeroTarjeta" class="form-control" />
                <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Cuando cambia el cluster
            $('#IdCluster').change(function() {
                var idCluster = $(this).val();
                var residenciaSelect = $('#IdResidencia');

                // Limpiar el select de residencias
                residenciaSelect.empty();
                residenciaSelect.append('<option value="">-- Cargando... --</option>');

                if (idCluster) {
                    // Hacer petición AJAX para obtener las residencias del cluster
                    $.ajax({
                        url: '@Url.Action("GetResidenciasByCluster", "Vehiculos")',
                        type: 'GET',
                        data: { idCluster: idCluster },
                        success: function(residencias) {
                            residenciaSelect.empty();
                            residenciaSelect.append('<option value="">-- Seleccione una Residencia --</option>');

                            $.each(residencias, function(i, residencia) {
                                residenciaSelect.append(
                                    $('<option></option>')
                                        .val(residencia.value)
                                        .text('Residencia ' + residencia.text)
                                );
                            });
                        },
                        error: function() {
                            residenciaSelect.empty();
                            residenciaSelect.append('<option value="">-- Error al cargar residencias --</option>');
                        }
                    });
                } else {
                    residenciaSelect.empty();
                    residenciaSelect.append('<option value="">-- Seleccione primero un Cluster --</option>');
                }
            });
        });
    </script>
}