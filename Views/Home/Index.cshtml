@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">🏘️ ARSAN - Sistema de Administración</h1>
    <p class="lead">Sistema Integral de Administración de Residenciales</p>

    <hr class="my-4" />

    <div class="row mt-5">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h1 class="display-1 text-primary">🏠</h1>
                    <h5 class="card-title">Gestión</h5>
                    <p class="card-text">Propietarios, inquilinos y residencias</p>
                    <a asp-controller="Propietarios" asp-action="Index" class="btn btn-primary">Ver</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h1 class="display-1 text-success">🛡️</h1>
                    <h5 class="card-title">Seguridad</h5>
                    <p class="card-text">Guardias, visitas y control de accesos</p>
                    <a asp-controller="Guardias" asp-action="Index" class="btn btn-success">Ver</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h1 class="display-1 text-warning">💰</h1>
                    <h5 class="card-title">Financiero</h5>
                    <p class="card-text">Pagos, multas y estados de cuenta</p>
                    <a asp-controller="PagoMantenimientos" asp-action="Index" class="btn btn-warning">Ver</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h1 class="display-1 text-info">📊</h1>
                    <h5 class="card-title">Consultas</h5>
                    <p class="card-text">Reportes y análisis del residencial</p>
                    <a asp-controller="Consultas" asp-action="Index" class="btn btn-info">Ver</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">🏢 Residencial Activo</h5>
                </div>
                <div class="card-body">
                    <p><strong>Actualmente trabajando con:</strong> Residenciales San Francisco</p>
                    <a asp-controller="Residencial" asp-action="Index" class="btn btn-outline-dark">Gestionar Residenciales</a>
                </div>
            </div>
        </div>
    </div>
</div>