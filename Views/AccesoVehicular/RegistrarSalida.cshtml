@model ARSAN_Web.Models.AccesoVehicular

@{
    ViewData["Title"] = "Registrar Salida";
    var fechaHoraIngreso = Model.FechaIngreso.Date + Model.HoraIngreso;
    var permanencia = DateTime.Now - fechaHoraIngreso;
}

<div class="mb-4">
    <h1>Registrar Salida de Vehículo</h1>
    <p class="text-muted">Complete los datos de salida del vehículo</p>
</div>

<div class="alert alert-info mb-4">
    <h5>📋 Información del Ingreso</h5>
    <div class="row">
        <div class="col-md-6">
            <strong>Placa:</strong> @Model.Placa<br />
            <strong>Tipo:</strong> @Model.TipoAcceso<br />
            <strong>Garita Ingreso:</strong> @Model.Garita?.Nombre
        </div>
        <div class="col-md-6">
            <strong>Fecha/Hora Ingreso:</strong> @Model.FechaIngreso.ToString("dd/MM/yyyy") @Model.HoraIngreso.ToString(@"hh\:mm")<br />
            <strong>Guardia Ingreso:</strong> @Model.GuardiaIngreso?.NombreCompleto<br />
            <strong>Permanencia actual:</strong>
            @if (permanencia.TotalHours < 24)
            {
                <span>@((int)permanencia.TotalHours)h @permanencia.Minutes minutos</span>
            }
            else
            {
                <span>@((int)permanencia.TotalDays) día(s) @permanencia.Hours horas</span>
            }
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-warning">
        <h5 class="mb-0">Registrar Salida</h5>
    </div>
    <div class="card-body">
        <form asp-action="RegistrarSalida" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="IdAcceso" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="FechaSalida" class="form-label">Fecha de Salida</label>
                        <input type="date" name="FechaSalida" class="form-control"
                               value="@Model.FechaSalida?.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="HoraSalida" class="form-label">Hora de Salida</label>
                        <input type="time" name="HoraSalida" class="form-control"
                               value="@Model.HoraSalida?.ToString(@"hh\:mm")" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="IdGuardiaSalida" class="form-label">Guardia que Registra Salida</label>
                        <select name="IdGuardiaSalida" class="form-select" asp-items="ViewBag.IdGuardiaSalida" required>
                            <option value="">-- Seleccione el guardia --</option>
                        </select>
                        <small class="form-text text-muted">Guardia de turno que registra la salida</small>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Observaciones" class="form-label">Observaciones de Salida (Opcional)</label>
                        <textarea name="Observaciones" class="form-control" rows="3"
                                  placeholder="Ej. Salida normal, incidente reportado, etc."></textarea>
                        <small class="form-text text-muted">Se agregará a las observaciones existentes</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-warning">Registrar Salida</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <div class="alert alert-warning">
        <strong>⚠️ Importante:</strong> Verifique que la fecha y hora de salida sean correctas.
        La salida debe ser posterior al ingreso.
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}