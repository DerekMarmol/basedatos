@model IEnumerable<ARSAN_Web.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
    var dpisNoGratos = ViewBag.DpisNoGratos as List<string> ?? new List<string>();
}

<h1>Propietarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Propietario</a>
</p>

@if (dpisNoGratos.Any())
{
    <div class="alert alert-warning">
        <strong>⚠️ Advertencia:</strong> Hay personas no gratas registradas en el sistema.
        Aparecerán marcadas con <span class="badge bg-danger">⚠️ NO GRATO</span>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>DPI</th>
            <th>Teléfono</th>
            <th>Fecha Nacimiento</th>
            <th>Estado Civil</th>
            <th>Tipo Licencia</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var esNoGrato = dpisNoGratos.Contains(item.Dpi);
            <tr class="@(esNoGrato ? "table-danger" : "")">
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                    @if (esNoGrato)
                    {
                        <br />

                        <small class="text-danger"><strong>⚠️ PERSONA NO GRATA</strong></small>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Dpi)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                <td>@Html.DisplayFor(modelItem => item.EstadoCivil)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoLicencia)</td>
                <td>
                    @if (esNoGrato)
                    {
                        <span class="badge bg-danger">⚠️ NO GRATO</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPropietario" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdPropietario" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdPropietario" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay propietarios registrados. <a asp-action="Create">Crear el primero</a>
    </div>
}