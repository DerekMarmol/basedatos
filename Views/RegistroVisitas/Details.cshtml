@model ARSAN_Web.Models.RegistroVisita

@{
    ViewData["Title"] = "Detalles de la Visita";
    var esActiva = !Model.FechaSalida.HasValue;
    var duracion = esActiva ?
        (DateTime.Now - Model.FechaIngreso) :
        (Model.FechaSalida.Value - Model.FechaIngreso);
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Registro de Visitas</a></li>
                        <li class="breadcrumb-item active">Detalles</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2>
                            <i class="bi bi-clipboard-check text-info me-2"></i>Detalles de la Visita
                        </h2>
                        <p class="text-muted mb-0">Información completa del registro</p>
                    </div>
                    @if (esActiva)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Activa
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">
                            <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Finalizada
                        </span>
                    }
                </div>
            </div>

            <!-- Estado de la visita -->
            @if (esActiva)
            {
                <div class="alert alert-success" role="alert">
                    <h6 class="alert-heading">
                        <i class="bi bi-door-open me-2"></i>Visita Activa
                    </h6>
                    <p class="mb-0">
                        Esta visita está actualmente en el residencial.
                        Lleva <strong>@((int)duracion.TotalHours) horas y @duracion.Minutes minutos</strong> desde su ingreso.
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-secondary" role="alert">
                    <h6 class="alert-heading">
                        <i class="bi bi-door-closed me-2"></i>Visita Finalizada
                    </h6>
                    <p class="mb-0">
                        Esta visita ha finalizado. Duración total: <strong>@((int)duracion.TotalHours) horas y @duracion.Minutes minutos</strong>
                    </p>
                </div>
            }

            <!-- Información del Visitante -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Información del Visitante
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Nombre Completo</label>
                            <p class="fs-4 mb-0">
                                <i class="bi bi-person-fill text-primary me-2"></i>
                                <strong>@Model.Visitante.NombreCompleto</strong>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Empresa</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Visitante.Empresa))
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-building me-1"></i>@Model.Visitante.Empresa
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Visita personal</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">DPI</label>
                            <p class="mb-0">
                                @(string.IsNullOrEmpty(Model.Visitante.Dpi) ? "-" : Model.Visitante.Dpi)
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Teléfono</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Visitante.Telefono))
                                {
                                    <a href="tel:@Model.Visitante.Telefono">
                                        <i class="bi bi-telephone-fill text-success me-1"></i>@Model.Visitante.Telefono
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Visitante.Placa))
                    {
                        <hr>
                        <div class="mb-0">
                            <label class="text-muted small fw-bold text-uppercase">Placa del Vehículo</label>
                            <p class="mb-0">
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-car-front-fill me-1"></i>@Model.Visitante.Placa
                                </span>
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Destino y Motivo -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt me-2"></i>Destino y Motivo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Residencia de Destino</label>
                            <p class="fs-5 mb-0">
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-house-door-fill me-1"></i>#@Model.IdCasa
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Motivo de la Visita</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.Motivo) ? "No especificado" : Model.Motivo)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de Ingreso y Salida -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-door-open me-2"></i>Ingreso
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="text-muted small fw-bold text-uppercase">Fecha y Hora</label>
                                <p class="fs-5 mb-0">
                                    <i class="bi bi-calendar-event text-success me-2"></i>
                                    @Model.FechaIngreso.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                            <hr>
                            <div class="mb-0">
                                <label class="text-muted small fw-bold text-uppercase">Guardia de Ingreso</label>
                                <p class="mb-0">
                                    <i class="bi bi-shield-check text-success me-2"></i>
                                    @Model.GuardiaIngreso.NombreCompleto
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header @(esActiva ? "bg-warning" : "bg-secondary") text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-door-closed me-2"></i>Salida
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (esActiva)
                            {
                                <div class="text-center py-3">
                                    <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                                    <p class="text-muted mt-3 mb-0">El visitante aún no ha salido</p>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <label class="text-muted small fw-bold text-uppercase">Fecha y Hora</label>
                                    <p class="fs-5 mb-0">
                                        <i class="bi bi-calendar-check text-secondary me-2"></i>
                                        @Model.FechaSalida.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                                <hr>
                                <div class="mb-0">
                                    <label class="text-muted small fw-bold text-uppercase">Guardia de Salida</label>
                                    <p class="mb-0">
                                        @if (Model.GuardiaSalida != null)
                                        {
                                            <span>
                                                <i class="bi bi-shield-x text-secondary me-2"></i>
                                                @Model.GuardiaSalida.NombreCompleto
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No registrado</span>
                                        }
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>

                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.IdRegistro" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdRegistro" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ID del registro -->
            <div class="text-center text-muted small">
                <p class="mb-0">ID de Registro: #@Model.IdRegistro</p>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-weight: 500;
        padding: 0.5rem 0.8rem;
    }

    hr {
        opacity: 0.1;
    }
</style>
