@model ARSAN_Web.Models.RegistroVisita

@{
    ViewData["Title"] = "Eliminar Registro de Visita";
    var esActiva = !Model.FechaSalida.HasValue;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Registro de Visitas</a></li>
                        <li class="breadcrumb-item active">Eliminar</li>
                    </ol>
                </nav>
                <h2 class="text-danger">
                    <i class="bi bi-trash me-2"></i>Eliminar Registro de Visita
                </h2>
                <p class="text-muted">Confirme la eliminación de este registro</p>
            </div>

            <!-- Alerta de advertencia -->
            <div class="alert alert-danger border-danger shadow-sm" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>¡Atención!
                </h5>
                <p class="mb-0">
                    Está a punto de eliminar este registro de visita de forma permanente.
                    Esta acción <strong>NO</strong> se puede deshacer.
                </p>
            </div>

            @if (esActiva)
            {
                <div class="alert alert-warning" role="alert">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-circle me-2"></i>Visita Activa
                    </h6>
                    <p class="mb-0">
                        Esta visita está actualmente activa. Eliminarla significará que no habrá registro de esta visita en curso.
                    </p>
                </div>
            }

            <!-- Información del registro a eliminar -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-check me-2"></i>Información de la Visita
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Visitante -->
                    <div class="mb-3">
                        <label class="text-muted small fw-bold text-uppercase">Visitante</label>
                        <div class="alert alert-light border mb-0">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-fill fs-3 text-danger me-3"></i>
                                <div>
                                    <p class="mb-0 fw-bold fs-5">@Model.Visitante.NombreCompleto</p>
                                    @if (!string.IsNullOrEmpty(Model.Visitante.Empresa))
                                    {
                                        <small class="text-muted">@Model.Visitante.Empresa</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Destino -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Residencia de Destino</label>
                            <p class="mb-0">
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-house-door-fill me-1"></i>#@Model.IdCasa
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Estado</label>
                            <p class="mb-0">
                                @if (esActiva)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Activa
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Finalizada
                                    </span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <!-- Fechas -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Fecha de Ingreso</label>
                            <p class="fs-6 mb-0">
                                <i class="bi bi-calendar-event text-danger me-2"></i>
                                @Model.FechaIngreso.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold text-uppercase">Fecha de Salida</label>
                            <p class="fs-6 mb-0">
                                @if (Model.FechaSalida.HasValue)
                                {
                                    <span>
                                        <i class="bi bi-calendar-check text-danger me-2"></i>
                                        @Model.FechaSalida.Value.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin salida registrada</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <!-- Motivo -->
                    <div class="mb-0">
                        <label class="text-muted small fw-bold text-uppercase">Motivo</label>
                        <p class="mb-0">@(string.IsNullOrEmpty(Model.Motivo) ? "No especificado" : Model.Motivo)</p>
                    </div>
                </div>
            </div>

            <!-- Advertencias -->
            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Consecuencias
                </h6>
                <ul class="mb-0 small">
                    <li>Se eliminará permanentemente el registro de esta visita</li>
                    <li>Esta información no podrá ser recuperada</li>
                    <li>Los reportes históricos no incluirán esta visita</li>
                </ul>
            </div>

            <!-- Formulario de confirmación -->
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdRegistro" />

                        <div class="mb-4">
                            <h5 class="text-danger">¿Está seguro que desea eliminar este registro?</h5>
                            <p class="text-muted mb-0">
                                Esta acción eliminará permanentemente el registro de la visita de
                                <strong>@Model.Visitante.NombreCompleto</strong>.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>No, Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash me-2"></i>Sí, Eliminar Registro
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Link alternativo -->
            <div class="text-center mt-4">
                <a asp-action="Details" asp-route-id="@Model.IdRegistro" class="btn btn-link text-decoration-none">
                    <i class="bi bi-eye me-1"></i>Ver detalles completos del registro
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-weight: 500;
        padding: 0.5rem 0.8rem;
    }

    .alert {
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .alert-warning {
        border-left-color: #ffc107;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }

    hr {
        opacity: 0.1;
    }
</style>
