@model IEnumerable<ARSAN_Web.Models.RegistroVisita>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuardiaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuardiaSalida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
