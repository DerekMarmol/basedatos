@model ARSAN_Web.Models.MiembroJunta

@{
    ViewData["Title"] = "Detalles del Miembro";
    var estaActivo = Model.FechaFin == null || Model.FechaFin > DateTime.Now;
}

<div class="container mt-4">
    <div class="mb-4">
        <h1 class="text-purple">
            <i class="fas fa-user-circle"></i> Detalles del Miembro
        </h1>
        <p class="text-muted">Información completa del miembro de la junta directiva</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> Información del Cargo
                    </h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 mb-3">
                            <i class="fas fa-id-badge text-info"></i> Cargo
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <h5 class="text-purple mb-0">
                                @Html.DisplayFor(model => model.Cargo.Nombre)
                            </h5>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="fas fa-user text-info"></i> Propietario
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <strong>@Html.DisplayFor(model => model.Propietario.NombreCompleto)</strong>
                            <br>
                            <small class="text-muted">
                                DPI: <span class="badge bg-secondary">@Html.DisplayFor(model => model.Propietario.Dpi)</span>
                            </small>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="fas fa-building text-info"></i> Junta Directiva
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-purple fs-6">
                                ID: @Html.DisplayFor(model => model.JuntaDirectiva.IdJuntaDirectiva)
                            </span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="fas fa-calendar-alt text-info"></i> Fecha de Inicio
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-success fs-6">
                                @Html.DisplayFor(model => model.FechaInicio)
                            </span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <i class="fas fa-calendar-check text-info"></i> Fecha de Fin
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @if (Model.FechaFin != null)
                            {
                                <span class="badge bg-secondary fs-6">
                                    @Html.DisplayFor(model => model.FechaFin)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-infinity"></i> Actualidad
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 mb-0">
                            <i class="fas fa-toggle-on text-info"></i> Estado
                        </dt>
                        <dd class="col-sm-8 mb-0">
                            @if (estaActivo)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-history"></i> Finalizado
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 mb-3">
                <div class="card-body text-center p-4">
                    <i class="fas fa-user-tie fa-4x text-purple mb-3"></i>
                    <h5 class="card-title">@Model.Cargo.Nombre</h5>
                    <p class="card-text text-muted">
                        @Model.Propietario.NombreCompleto
                    </p>
                    @if (estaActivo)
                    {
                        <span class="badge bg-success mb-3">
                            <i class="fas fa-circle"></i> En funciones
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary mb-3">
                            <i class="fas fa-circle"></i> Periodo finalizado
                        </span>
                    }
                </div>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-cogs"></i> Acciones
                    </h6>
                </div>
                <div class="card-body d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.IdMiembroJunta" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Información
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .bg-gradient-info {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    }
</style>