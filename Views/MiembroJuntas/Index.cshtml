@model IEnumerable<ARSAN_Web.Models.MiembroJunta>

@{
    ViewData["Title"] = "Miembros de Junta Directiva";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-purple">
            <i class="fas fa-users-cog"></i> Miembros de Junta Directiva
        </h1>
        <a asp-action="Create" class="btn btn-purple btn-lg">
            <i class="fas fa-user-plus"></i> Agregar Miembro
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-purple text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Listado de Miembros
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.FechaInicio)
                                </th>
                                <th>
                                    <i class="fas fa-calendar-check"></i> @Html.DisplayNameFor(model => model.FechaFin)
                                </th>
                                <th>
                                    <i class="fas fa-building"></i> @Html.DisplayNameFor(model => model.JuntaDirectiva)
                                </th>
                                <th>
                                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Propietario)
                                </th>
                                <th>
                                    <i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.Cargo)
                                </th>
                                <th class="text-center">Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var estaActivo = item.FechaFin == null || item.FechaFin > DateTime.Now;
                                <tr class="@(estaActivo ? "" : "table-secondary")">
                                    <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                                    <td>
                                        @if (item.FechaFin != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.FechaFin)
                                        }
                                        else
                                        {
                                            <span class="text-muted">Actualidad</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-purple">
                                            @Html.DisplayFor(modelItem => item.JuntaDirectiva.IdJuntaDirectiva)
                                        </span>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Propietario.NombreCompleto)</td>
                                    <td>
                                        <strong class="text-purple">
                                            @Html.DisplayFor(modelItem => item.Cargo.Nombre)
                                        </strong>
                                    </td>
                                    <td class="text-center">
                                        @if (estaActivo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-history"></i> Finalizado
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IdMiembroJunta"
                                               class="btn btn-outline-info" title="Ver detalles">Detalles
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdMiembroJunta"
                                               class="btn btn-outline-warning" title="Editar">Editar
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdMiembroJunta"
                                               class="btn btn-outline-danger" title="Eliminar">Eliminar
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center">
                    <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No hay miembros registrados en la junta directiva.</p>
                    <a asp-action="Create" class="btn btn-purple">
                        <i class="fas fa-plus"></i> Agregar el primer miembro
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
    }

        .btn-purple:hover {
            background-color: #5a32a3;
            border-color: #5a32a3;
            color: white;
        }
</style>